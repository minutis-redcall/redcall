<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}RedCall{% endblock %}</title>
    {% block base_stylesheets %}
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Lato:wght@300;400;700&family=Roboto:wght@300;400;500;700&family=Ultra&family=Arvo:wght@400;700&family=Anton&family=Permanent+Marker&display=swap" rel="stylesheet">
        {{ encore_entry_link_tags('css') }}
    {% endblock %}
    {% block stylesheets %}{% endblock %}
</head>
<body>

{% block base_javascripts %}
    {{ encore_entry_script_tags('js') }}
    <script type="text/javascript">
        window.jQuery = $;
    </script>
{% endblock %}

<div class="container py-4">

    {% block flashes %}
        <div class="flashes-container">
            {% for flashMessage in app.session.flashbag.get('alert') %}
                <div class="alert alert-warning">
                    <span>{{ flashMessage|trans({}, translation_domain|default(null)) }}</span>
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('danger') %}
                <div class="alert alert-danger">
                    <span>{{ flashMessage|trans({}, translation_domain|default(null)) }}</span>
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('info') %}
                <div class="alert alert-info">
                    <span>{{ flashMessage|trans({}, translation_domain|default(null)) }}</span>
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    <span>{{ flashMessage|trans({}, translation_domain|default(null)) }}</span>
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            {% endfor %}
        </div>
    {% endblock %}

    {% block header %}
        <div class="header-band bg-white mb-4">
            <div class="container d-flex align-items-center justify-content-between py-3">
                <div class="header-main d-flex align-items-center">
                    <div class="logo-container mr-4">
                        {% block logo %}{% endblock %}
                    </div>

                    {% block menu %}
                        {% if app.user|default(false) %}
                            <nav class="d-flex align-items-center flex-wrap">
                                {% if app.user.trusted %}
                                    <a href="{{ path('home') }}" class="btn btn-link text-dark font-weight-bold mr-3">{{ 'base.home'|trans }}</a>

                                    <div class="dropdown mr-3">
                                        <button class="btn btn-link text-dark font-weight-bold dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            {{ 'campaign.titles.create_full'|trans }}
                                        </button>
                                        <div class="dropdown-menu">
                                            <a href="{{ path('create_campaign', {type: 'sms'}) }}" class="dropdown-item">üì±
                                                &nbsp; {{ 'campaign.titles.sms'|trans }}</a>
                                            <div class="dropdown-divider"></div>
                                            <a href="{{ path('create_campaign', {type: 'call'}) }}" class="dropdown-item">üìû
                                                &nbsp; {{ 'campaign.titles.call'|trans }}</a>
                                            <div class="dropdown-divider"></div>
                                            <a href="{{ path('create_campaign', {type: 'email'}) }}" class="dropdown-item">‚úâÔ∏è
                                                &nbsp; {{ 'campaign.titles.email'|trans }}</a>
                                        </div>
                                    </div>

                                    <a href="{{ path('list_campaigns') }}" class="btn btn-link text-dark font-weight-bold mr-3">{{ 'campaign.titles.list_full'|trans }}</a>
                                    <a href="{{ path('costs_home') }}" class="btn btn-link text-dark font-weight-bold mr-3">{{ 'costs.menu_button'|trans }}</a>
                                {% endif %}
                            </nav>
                        {% endif %}
                    {% endblock %}
                </div>

                <div class="header-actions d-flex align-items-center">
                    {% if app.user|default(false) and app.user.root %}
                        <div class="platform-switch mr-3">
                            {{ render(controller('\\App\\Controller\\Admin\\PlatformController::renderSwitch')) }}
                        </div>
                    {% endif %}

                    {% if session.volunteer|default(false) %}
                        <span class="badge badge-pill badge-primary">
                            {{ session.volunteer.firstName }} {{ session.volunteer.lastName[:1] }}.
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endblock %}

    {% block maintenance %}
        {% set maintenance = setting(constant('App\\Settings::MAINTENANCE_MESSAGE_CONTENT')) %}
        {% if maintenance and is_granted('ROLE_TRUSTED') %}
            <div class="alert alert-{{ setting(constant('App\\Settings::MAINTENANCE_MESSAGE_TYPE')) }}">
                {{ maintenance|nl2br }}
            </div>
        {% endif %}
    {% endblock %}

    {% block modals %}{% endblock %}
    {% block body %}{% endblock %}

    {% block footer %}
        <footer class="footer mt-5 py-5 border-top">
            <div class="text-center">
                {% block security %}
                    {% if app.user|default(false) %}
                        <div class="mb-4">
                            <a href="{{ minutis_url }}" class="btn btn-outline-primary">{{ 'minutis.back'|trans }}</a>
                        </div>

                        <div class="text-secondary small mb-2">
                            {{ app.user.mainStructure }}
                        </div>
                        <div class="mb-3">
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin_pegass_update_structures', {id: app.user.id}) }}" target="_blank" class="text-dark font-weight-bold">
                                    {{ 'password_login.connect.who_am_i'|trans({'%username%': app.user.displayName}) }}
                                </a>
                            {% else %}
                                <span class="text-dark font-weight-bold">
                                    {{ 'password_login.connect.who_am_i'|trans({'%username%': app.user.displayName}) }}
                                </span>
                            {% endif %}
                        </div>

                        <div class="mb-4">
                            {{ include('@PasswordLogin/menu.html.twig', {
                                display_user: false,
                                display_profile: false,
                                display_manage_users: false,
                            }) }}
                        </div>
                    {% endif %}
                {% endblock %}

                <div class="d-flex flex-wrap justify-content-center mb-4">
                    {% if app.user|default(false) and app.environment == 'dev' %}
                        <a href="{{ path('sandbox_home') }}" class="btn btn-secondary btn-sm m-1">{{ 'sandbox.home.link'|trans }}</a>
                    {% endif %}

                    {% if app.user|default(false) and app.user.volunteer %}
                        <a href="{{ path('go_to_space') }}" class="btn btn-secondary btn-sm m-1">{{ 'space.home.link'|trans }}</a>
                    {% endif %}

                    {% if app.user|default(false) and is_granted('ROLE_DEVELOPER') %}
                        <a href="{{ path('developer_home') }}" class="btn btn-secondary btn-sm m-1">{{ 'developer.home.link'|trans }}</a>
                    {% endif %}

                    {% if app.user|default(false) %}
                        <a href="{{ path('management_home') }}" class="btn btn-secondary btn-sm m-1">{{ 'management.home.resources'|trans }}</a>
                    {% endif %}

                    {% if app.user|default(false) and is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_home') }}" class="btn btn-secondary btn-sm m-1">{{ 'admin.home.link'|trans }}</a>
                    {% endif %}

                    <a href="https://github.com/minutis-redcall/app/blob/master/docs/user/fr/README.md" target="_blank" class="btn btn-secondary btn-sm m-1">{{ 'base.documentation'|trans }}</a>
                </div>

                {% block locales %}
                    <div class="locale-switcher d-flex justify-content-center mb-4">
                        <a href="{{ path('locale', {locale: 'en'}) }}" class="mx-2">üá¨üáß English</a>
                        <a href="{{ path('locale', {locale: 'fr'}) }}" class="mx-2">üá´üá∑ Fran√ßais</a>
                        <a href="{{ path('locale', {locale: 'es'}) }}" class="mx-2">üá™üá∏ Espa√±ol</a>
                        <a href="{{ path('locale', {locale: 'pt'}) }}" class="mx-2">üáµüáπ Portugu√™s</a>
                    </div>
                {% endblock %}

                <hr class="w-25 mx-auto mb-4">

                <div class="text-secondary small">
                    ¬© {{ "now"|date("Y") }} Croix-Rouge Fran√ßaise ‚Ä¢ RedCall
                </div>
            </div>
        </footer>
    {% endblock %}

</div>

{% block javascripts %}

    <script type="text/javascript">

        $('body').on('click', '.copy-to-clipboard', function (e) {
            e.preventDefault();

            var that = $(this);
            navigator.clipboard.writeText(that.html()).then(function () {
                that.tooltip({
                    title: 'Copied!',
                    trigger: 'manual',
                });
                that.tooltip('show');
                setTimeout(function () {
                    that.tooltip('hide');
                }, 1000);
            });
        });

        function escapeHtml(unsafe) {
            return unsafe
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

    </script>

{% endblock %}

</body>
</html>
