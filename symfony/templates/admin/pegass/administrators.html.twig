{% extends 'base.html.twig' %}

{% block title %}{{ 'admin.pegass.administrators.title'|trans }}{% endblock %}

{% block body %}
    <div class="col-md-12 jumbotron shadow p-3 mb-5 rounded">
        <h3>{{ 'admin.pegass.administrators.title'|trans }}</h3>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{{ 'admin.pegass.administrators.user'|trans }}</th>
                        <th>{{ 'admin.pegass.administrators.type'|trans }}</th>
                        <th>{{ 'base.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in roots %}
                        <tr>
                            <td>
                                <strong>{{ user.displayName }}</strong><br/>
                                <small class="text-muted">{{ user.username }}</small>
                            </td>
                            <td>
                                <span class="badge badge-danger">ROOT</span>
                            </td>
                            <td>
                                <span class="text-muted">{{ 'admin.pegass.administrators.cannot_revoke_root'|trans }}</span>
                            </td>
                        </tr>
                    {% endfor %}
                    {% for user in users %}
                        <tr>
                            <td>
                                <strong>{{ user.displayName }}</strong><br/>
                                <small class="text-muted">{{ user.username }}</small>
                            </td>
                            <td>
                                <span class="badge badge-primary">ADMIN</span>
                            </td>
                            <td>
                                {% if not user.isEqualTo(app.user) %}
                                    <a href="{{ path('admin_pegass_revoke_admin', {id: user.id, csrf: csrf_token('pegass')}) }}" 
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('{{ 'admin.pegass.administrators.revoke_confirm'|trans }}')">
                                        {{ 'admin.pegass.administrators.revoke'|trans }}
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('admin_pegass_index') }}" class="btn btn-secondary">{{ 'base.button.back'|trans }}</a>
        </div>
    </div>
{% endblock %}
