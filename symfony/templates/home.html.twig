{% extends 'base.html.twig' %}

{% block menu %}{% endblock %}

{% block body %}

    <br/>
    <div class="jumbotron text-center">

        {% if not user_information().structures.count %}

            <div class="row">

                <div class="col-md-12 jumbotron">

                    <h3>{{ 'campaign.no_nivol.title'|trans }}</h3>

                    {{ 'campaign.no_nivol.description'|trans }}

                </div>

            </div>

        {% else %}

            <a href="{{ path('create_campaign') }}"
               class="text-lg-center large-button btn btn-secondary">{{ 'campaign.titles.create_full'|trans }}</a>

            <br/><br/><br/>

            <a href="{{ path('list_campaigns') }}"
               class="text-lg-center large-button btn btn-secondary">{{ 'campaign.titles.list_full'|trans }}</a>

            <br/><br/><br/>

            {% if issues.phones or issues.emails %}
                <div class="alert alert-warning">
                    <p>⚠️</p>
                    <hr/>
                    <div class="text-left">
                        <p>{{ 'issues.not_reachable'|trans }}️</p>
                        {% if issues.phones %}
                            <p>{{ 'issues.phones'|trans({'%nbr%': issues.phones}) }}️</p>
                        {% endif %}
                        {% if issues.emails %}
                            <p>{{ 'issues.emails'|trans({'%nbr%': issues.emails}) }}️</p>
                        {% endif %}
                        <p>
                            <a href="{{ path('management_issues_index') }}">{{ 'issues.list'|trans }}</a>
                        </p>
                    </div>
                </div>
            {% endif %}


        {% endif %}

    </div>

{% endblock %}
