{% extends 'base.html.twig' %}

{% block logo %}
    <a href="{{ path('home') }}">
        <img src="{{ asset('minutis.png') }}" style="max-height: 50px;" alt="Croix-Rouge FranÃ§aise"/>
    </a>
{% endblock %}

{% block body %}

    <br/>
    <div class="jumbotron bg-white border-0 text-center py-5">

        {% if not app.user.structures.count %}

            <div class="row">

                <div class="col-md-12 p-3 mb-5 rc-rounded rc-crayon-border bg-light">

                    <h3 class="text-rational">{{ 'campaign.no_structures.title'|trans }}</h3>

                    {{ 'campaign.no_structures.description'|trans }}

                </div>

            </div>

        {% else %}

            <div class="row">
                <div class="col-12 mb-5">
                    <h1 class="">{{ 'campaign.titles.create_full'|trans }}</h1>
                </div>
                
                <div class="col-md-4 mb-4">
                    <a href="{{ path('create_campaign', {type: 'sms'}) }}" class="rc-btn-circle btn-yellow text-decoration-none shadow-sm">
                        <div class="icon">ğŸ“±</div>
                        <strong class="text-rational">{{ 'campaign.titles.sms'|trans }}</strong>
                    </a>
                </div>
                
                <div class="col-md-4 mb-4">
                    <a href="{{ path('create_campaign', {type: 'call'}) }}" class="rc-btn-circle btn-red text-decoration-none shadow-sm">
                        <div class="icon">ğŸ“</div>
                        <strong class="text-rational">{{ 'campaign.titles.call'|trans }}</strong>
                    </a>
                </div>
                
                <div class="col-md-4 mb-4">
                    <a href="{{ path('create_campaign', {type: 'email'}) }}" class="rc-btn-circle btn-blue text-decoration-none shadow-sm">
                        <div class="icon">âœ‰ï¸</div>
                        <strong class="text-rational">{{ 'campaign.titles.email'|trans }}</strong>
                    </a>
                </div>
            </div>

            <div class="mt-5 pt-4">
                <a href="{{ path('list_campaigns') }}"
                   class="btn btn-primary btn-lg rc-rounded px-5">{{ 'campaign.titles.list_full'|trans }}</a>
            </div>

            <div id="issues" class="mt-5">
                <img src="{{ asset('spinner.gif') }}" style="width:25px;"/>
            </div>

        {% endif %}

    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    {% if app.user.structures.count %}

        <script type="text/javascript">

            $(function () {
                $.get('{{ path('audience_home') }}', function (content) {
                    $('#issues').html(content);
                });
            });

        </script>

    {% endif %}

{% endblock %}
